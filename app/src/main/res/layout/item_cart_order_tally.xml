<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/icon_padding">

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_shop_logo"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="友阿果园"
            android:textColor="@color/mall_secondary_title"
            android:textSize="@dimen/font_size_middle" />

        <TextView
            android:id="@+id/tv_promotion_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="（全场满1.00元免邮）"
            android:textColor="@color/paleRed"
            android:textSize="@dimen/font_size_middle"
            android:visibility="invisible" />

    </LinearLayout>

    <View
        style="@style/Line"
        android:layout_marginLeft="10dp" />

    <com.your.mall.view.MyListView
        android:id="@+id/lv_goods_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@color/divide_line"
        android:dividerHeight="1px"
        android:paddingLeft="@dimen/icon_padding"
        android:visibility="visible" />

    <View
        style="@style/Line"
        android:layout_marginLeft="@dimen/icon_padding" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/icon_padding"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺优惠"
            android:textColor="@color/mall_secondary_title"
            android:textSize="@dimen/font_size_middle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/icon_arrow"
            android:text="不使用优惠券"
            android:textColor="@color/mall_secondary_title"
            android:textSize="@dimen/font_size_middle" />
    </RelativeLayout>

    <View
        style="@style/Line"
        android:layout_marginLeft="@dimen/icon_padding"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="买家留言，85个字以内"
        android:padding="@dimen/icon_padding"
        android:textColor="@color/mall_secondary_title"
        android:textSize="@dimen/font_size_middle" />

    <View
        style="@style/Line"
        android:layout_marginLeft="@dimen/icon_padding" />

    <TextView
        android:id="@+id/tv_cost_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/mall_secondary_title"
        android:textSize="@dimen/font_size_middle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总计："
            android:textColor="@color/mall_secondary_title"
            android:textSize="@dimen/font_size_middle" />

        <TextView
            android:id="@+id/tv_total_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/paleRed"
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold" />
    </LinearLayout>

    <View style="@style/Line" />

</LinearLayout>