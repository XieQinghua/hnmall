<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_head" />

    <com.your.mall.view.ElasticityScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_bargain_home_logo">

                <ImageView
                    android:id="@+id/iv_bargain_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:src="@drawable/img_activity_rule" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_time_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="1"
                        android:background="@color/divide_line" />

                    <TextView
                        android:id="@+id/tv_time_remain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/mall_title_color"
                        android:textSize="@dimen/font_size_small" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:background="@color/divide_line" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_time_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll1"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_month"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btn_black_shape"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="月"
                        android:textColor="@color/mall_title_color"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btn_black_shape"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="天"
                        android:textColor="@color/mall_title_color"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/tv_hour"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btn_black_shape"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="时"
                        android:textColor="@color/mall_title_color"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/tv_minute"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btn_black_shape"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="分"
                        android:textColor="@color/mall_title_color"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/tv_second"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btn_black_shape"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="秒"
                        android:textColor="@color/mall_title_color"
                        android:textSize="@dimen/font_size_small" />

                </LinearLayout>
            </RelativeLayout>


            <View style="@style/Line" />

            <com.your.mall.view.MyListView
                android:id="@+id/lv_bargain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/divide_line"
                android:dividerHeight="1px"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_bargain_activity_flow" />

        </LinearLayout>
    </com.your.mall.view.ElasticityScrollView>
</LinearLayout>