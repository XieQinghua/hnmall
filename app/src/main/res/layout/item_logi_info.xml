<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_logi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/icon_padding"
        android:scaleType="fitXY"
        android:src="@drawable/img_logi_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/icon_padding"
        android:layout_toRightOf="@+id/iv_logi"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_acceptstation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到长沙市【长沙八一路分部】"
            android:textColor="@color/mall_content_color"
            android:textSize="@dimen/font_size_middle" />

        <TextView
            android:id="@+id/tv_accepttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2016-05-09 14:49:44"
            android:textColor="@color/mall_content_color"
            android:textSize="@dimen/font_size_middle" />
    </LinearLayout>
</RelativeLayout>