<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!--分隔线-->
    <View style="@style/Line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/icon_padding">

        <CheckBox
            android:id="@+id/cb_shop_name"
            style="@style/CartCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="友阿果园"
            android:textColor="@color/mall_secondary_title"
            android:textSize="@dimen/font_size_middle" />

        <TextView
            android:id="@+id/tv_promotion_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="（全场满1.00元免邮）"
            android:textColor="@color/paleRed"
            android:textSize="@dimen/font_size_middle"
            android:visibility="invisible" />
    </LinearLayout>

    <!--分隔线-->
    <View
        style="@style/Line"
        android:layout_marginLeft="@dimen/icon_padding" />

    <com.your.mall.view.MyListView
        android:id="@+id/lv_goods_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@color/divide_line"
        android:dividerHeight="1px"
        android:paddingLeft="@dimen/icon_padding"
        android:visibility="visible" />

    <!--分隔线-->
    <View style="@style/Line" />
</LinearLayout>