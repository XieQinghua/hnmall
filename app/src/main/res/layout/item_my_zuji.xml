<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_goods_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/btn_gray_rectangle_shape"
            android:padding="1dp"
            android:src="@drawable/img_default_goods" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_goods_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="苹果"
                android:textColor="@color/mall_content_color"
                android:textSize="@dimen/font_size_middle" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥79.00"
                    android:textColor="@color/nbhRed"
                    android:textSize="@dimen/font_size_middle" />

                <TextView
                    android:id="@+id/tv_ctime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="40分钟前来过"
                    android:textColor="@color/mall_content_color"
                    android:textSize="@dimen/font_size_small" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/tv_buy"
                    android:background="@drawable/btn_gray_rectangle_shape"
                    android:padding="5dp"
                    android:text="删除"
                    android:textColor="@color/mall_content_color"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tv_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_gray_rectangle_shape"
                    android:padding="5dp"
                    android:text="立即购买"
                    android:textColor="@color/mall_content_color"
                    android:textSize="@dimen/font_size_small" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>