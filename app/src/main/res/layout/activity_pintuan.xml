<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/canvasGray"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_head" />

    <com.your.mall.view.ElasticityScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_pintuan_bg">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/divide_line" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="拼团抽奖区"
                        android:textColor="@color/mall_title_color"
                        android:textSize="@dimen/font_size_middle" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/divide_line" />

                </LinearLayout>

            </RelativeLayout>

            <View style="@style/Line" />

            <com.your.mall.view.MyListView
                android:id="@+id/lv_pingtuan_cj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/divide_line"
                android:dividerHeight="1px"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/divide_line" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="拼团区"
                        android:textColor="@color/mall_title_color"
                        android:textSize="@dimen/font_size_middle" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/divide_line" />

                </LinearLayout>

            </RelativeLayout>

            <View style="@style/Line" />

            <com.your.mall.view.MyListView
                android:id="@+id/lv_pingtuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/divide_line"
                android:dividerHeight="1px"
                android:visibility="gone" />

        </LinearLayout>
    </com.your.mall.view.ElasticityScrollView>

</LinearLayout>