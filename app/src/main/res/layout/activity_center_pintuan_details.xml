<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_head" />

    <com.your.mall.view.ElasticityScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_layout_title"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_pintuan_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_goods_banner"
                android:layout_width="match_parent"
                android:layout_height="240dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_padding"
                android:paddingLeft="@dimen/icon_padding"
                android:paddingRight="@dimen/icon_padding">

                <TextView
                    android:id="@+id/tv_goods_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="红富士"
                    android:textColor="@color/mall_title_color"
                    android:textSize="@dimen/font_size_middle" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/icon_padding"
                android:layout_marginTop="@dimen/icon_padding"
                android:orientation="vertical"
                android:paddingLeft="@dimen/icon_padding"
                android:paddingRight="@dimen/icon_padding">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_chengtuan"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/btn_red_pressed_shape"
                        android:gravity="center"
                        android:paddingLeft="75dp"
                        android:paddingRight="75dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_middle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_pintuan_join_people" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="快速成团秘籍：支付成功后，请到个人中心-我的团购 中邀请您的好友来参团。"
                    android:textColor="@color/mall_title_color"
                    android:textSize="@dimen/font_size_small" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/canvasGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/icon_padding">

                <LinearLayout
                    android:id="@+id/ll_time_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="距离本团关闭还剩"
                        android:textColor="@color/mall_title_color"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/btn_black_shape"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="天"
                        android:textColor="@color/mall_title_color"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/tv_hour"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btn_black_shape"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="时"
                        android:textColor="@color/mall_title_color"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/tv_minute"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btn_black_shape"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="分"
                        android:textColor="@color/mall_title_color"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/tv_second"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btn_black_shape"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="秒"
                        android:textColor="@color/mall_title_color"
                        android:textSize="@dimen/font_size_small" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_button_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_invite_pintuan"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/btn_red_pressed_shape"
                        android:gravity="center"
                        android:text="邀请好友来参加"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_middle"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_back_pintuan"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/icon_padding"
                        android:layout_weight="1"
                        android:background="@drawable/btn_red_pressed_shape"
                        android:gravity="center"
                        android:text="返回拼团列表"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_middle"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/canvasGray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_pintuan_activity_fiow">

                <TextView
                    android:id="@+id/tv_pintuan_rule"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </RelativeLayout>

            <View style="@style/Line" />

            <WebView
                android:id="@+id/wap_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></WebView>

        </LinearLayout>
    </com.your.mall.view.ElasticityScrollView>

</RelativeLayout>