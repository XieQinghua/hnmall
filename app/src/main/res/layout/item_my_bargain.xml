<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_goods_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_default_goods" />

            <ImageView
                android:id="@+id/iv_bargain_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_bargain_in" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_goods_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/rl"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="苹果"
                android:textColor="@color/mall_title_color"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="已有118人参与砍价"
                android:textColor="@color/mall_content_color"
                android:textSize="@dimen/font_size_small" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="现价"
                    android:textColor="@color/mall_content_color"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="89.00"
                    android:textColor="@color/paleRed"
                    android:textSize="@dimen/font_size_middle" />

                <TextView
                    android:id="@+id/tv_activity_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="原价￥89.00"
                    android:textColor="@color/mall_content_color"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_red_pressed_shape"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="查看详情"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_middle" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>