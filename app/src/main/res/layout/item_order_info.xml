<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!--分隔线-->
    <View style="@style/Line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/icon_padding">

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_shop_logo"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="友阿果园 ＞"
            android:textColor="@color/mall_secondary_title"
            android:textSize="@dimen/font_size_middle" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="待付款"
            android:textColor="@color/paleRed"
            android:textSize="@dimen/font_size_middle" />
    </RelativeLayout>

    <!--分隔线-->
    <View
        style="@style/Line"
        android:layout_marginLeft="@dimen/icon_padding" />

    <com.your.mall.view.MyListView
        android:id="@+id/lv_child_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@color/divide_line"
        android:dividerHeight="1px"
        android:focusable="false"
        android:paddingLeft="@dimen/icon_padding"
        android:visibility="visible" />

    <!--分隔线-->
    <View
        style="@style/Line"
        android:layout_marginLeft="@dimen/icon_padding" />

    <TextView
        android:id="@+id/tv_cost_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:checked="true"
        android:gravity="right"
        android:padding="@dimen/icon_padding"
        android:text="共3件商品 合计：￥504.00（含运费￥0.00）"
        android:textColor="@color/mall_secondary_title"
        android:textSize="@dimen/font_size_middle" />

    <!--分隔线-->
    <View
        android:id="@+id/line"
        style="@style/Line"
        android:layout_marginLeft="@dimen/icon_padding"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/icon_padding"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_botton1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/btn_rectangle_shape"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text=""
            android:textColor="@color/mall_secondary_title"
            android:textSize="@dimen/font_size_middle" />

        <TextView
            android:id="@+id/tv_botton2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_rectangle_shape"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text=""
            android:textColor="@color/mall_secondary_title"
            android:textSize="@dimen/font_size_middle" />
    </LinearLayout>

    <!--分隔线-->
    <View style="@style/Line" />
</LinearLayout>